---
import { Phone, Mail, MapPin, Clock } from '@lucide/astro';
import { contact } from '../../data/data.json';
---


<section id="contact" class="py-20 bg-gray-900 text-white">
    <div class="container mx-auto px-4 lg:px-8 xl:px-16 2xl:px-30">
        <div class="text-center mb-16">
            <h2 class="text-4xl font-bold mb-4">
            Get In <span class="bg-gradient-to-r from-green-400 to-emerald-400 bg-clip-text text-transparent">Touch</span>
            </h2>
            <p class="text-xl text-gray-300 max-w-3xl mx-auto">
            Ready to start exporting premium fresh produce? Contact us today for a personalized quote 
            and discover how we can help grow your business globally.
            </p>
        </div>
        
        <div class="grid md:grid-cols-2 gap-8 lg:gap-16">
            {/* Contact Info */}
            <div class="space-y-8">
                <div>
                    <h3 class="text-2xl font-bold mb-6 md:pt-8">Contact Information</h3>
                    <div class="space-y-6">
                    <div class="flex items-start space-x-4">
                        <div class="bg-green-600 p-3 rounded-full">
                        <Phone class="h-6 w-6" />
                        </div>
                        <div>
                        <h4 class="font-semibold mb-1">Phone</h4>
                        { contact.phone.map(phone => (
                            <a class="text-gray-300" href={`tel:${phone.value}`}>{phone.text}</a>
                        ))}
                        </div>
                    </div>
                    
                    <div class="flex items-start space-x-4">
                        <div class="bg-green-600 p-3 rounded-full">
                        <Mail class="h-6 w-6" />
                        </div>
                        <div>
                        <h4 class="font-semibold mb-1">Email</h4>
                        { contact.email.map(email => (
                            <a class="text-gray-300" href={`mailto:${email}`}>{email}</a>
                        ))}
                        </div>
                    </div>
                    
                    <div class="flex items-start space-x-4">
                        <div class="bg-green-600 p-3 rounded-full">
                        <MapPin class="h-6 w-6" />
                        </div>
                        <div>
                        <h4 class="font-semibold mb-1">Address</h4>
                        { contact.address.map(address => (
                            <p class="text-gray-300">{address}</p>
                        ))}
                        </div>
                    </div>
                    
                    <!-- <div class="flex items-start space-x-4">
                        <div class="bg-green-600 p-3 rounded-full">
                        <Clock class="h-6 w-6" />
                        </div>
                        <div>
                        <h4 class="font-semibold mb-1">Business Hours</h4>
                        <p class="text-gray-300">Monday - Friday: 6:00 AM - 10:00 PM</p>
                        <p class="text-gray-300">Weekend: 8:00 AM - 6:00 PM</p>
                        </div>
                    </div> -->
                    </div>
                </div>
            </div>
            
            {/* Contact Form */}
            <div class="bg-gray-800 rounded-3xl p-8">
            <h3 class="text-2xl font-bold mb-6">Send us a Message</h3>
            <form class="space-y-6">
                <div class="grid md:grid-cols-1 gap-4">
                <input placeholder="Your Name" class="bg-gray-700 border-gray-600 text-white placeholder-gray-400" />
                </div>
                
                <div class="grid lg:grid-cols-2 gap-4">
                <input type="email" placeholder="Email Address" class="bg-gray-700 border-gray-600 text-white placeholder-gray-400" />
                <input type="tel" placeholder="Phone Number" class="bg-gray-700 border-gray-600 text-white placeholder-gray-400" />
                </div>

                <div class="grid md:grid-cols-1 gap-4">
                <input placeholder="Subject" class="bg-gray-700 border-gray-600 text-white placeholder-gray-400" />
                </div>

                <div class="grid md:grid-cols-1 gap-4">
                <textarea 
                    placeholder="Tell us about your requirements..." 
                    rows={4}
                    class="bg-gray-700 border-gray-600 text-white placeholder-gray-400 resize-none"
                />
                </div>

                <button class="w-full bg-gradient-to-r from-green-600 to-emerald-600 hover:from-green-700 hover:to-emerald-700 text-white py-3">
                Send Message
                </button>
            </form>
            </div>
        </div>
    </div>
</section>
    