    }
	/* #signup-button:hover { */
    #getintouch-button:hover {
        /* color: #ffffff;
        transition: color 0.4s ease-in-out; */
        background-color: #000000;
        transition: background-color 0.45s ease-in-out;
    }

    .mobile-menu {
        position: fixed;
        top: 72px;
        left: 0;
        width: 100%;
        height: calc(100vh - 72px);
        background-color: white;
        z-index: 99;
        transform: translateY(calc(-100% + 72px)); /* Start off-screen (hidden above) */
        transition: transform 0.3s ease-in-out; /* Smooth slide-in/out animation */
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        overflow-y: auto; /* Allow scrolling if content overflows */
    }

    .mobile-menu.open {
        transform: translateY(0); /* Slide into view */
        transition: transform 0.4s ease-in-out;
    }

    .mobile-menu.closing {
        transform: translateY(-100%); /* Slide out to the bottom */
        transition: transform 0.7s ease-in-out;
    }

    @keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(10px); /* Slightly move items down */
        }
        to {
            opacity: 1;
            transform: translateY(0); /* Move items to their original position */
        }
    }

    .mobile-menu .nav-item,
    .mobile-menu .nav-button {
        opacity: 0; /* Initially hidden */
        animation: fadeIn 0.3s ease-in-out forwards; /* Apply fade-in animation */
    }

    .mobile-menu.open .nav-item,
    .mobile-menu.open .nav-button {
        animation-delay: 0.25s; /* Add a slight delay for a staggered effect */
    }

    .mobile-menu.open .nav-item:nth-child(2) {
        animation-delay: 0.2s;
    }

    .mobile-menu.open .nav-item:nth-child(3) {
        animation-delay: 0.3s;
    }

    .mobile-menu.open .nav-button:nth-child(4) {
        animation-delay: 0.4s;
    }

    .mobile-menu.open .nav-button:nth-child(5) {
        animation-delay: 0.5s;
    }
</style>

<script>

let isMenuOpen = false;

function toggleMenu() {
    const mobileMenu = document.querySelector('.mobile-menu');
    if (!mobileMenu) return;

    if (isMenuOpen) {
        // Close the menu
        mobileMenu.classList.remove('open');
        mobileMenu.classList.add('closing'); // Add the closing animation
        setTimeout(() => {
            mobileMenu.classList.remove('closing');
            mobileMenu.classList.add('hidden'); // Hide the menu after animation
        }, 300); // Match the CSS transition duration
    } else {
        // Open the menu
        mobileMenu.classList.remove('hidden'); // Remove hidden to make it visible
        setTimeout(() => {
            mobileMenu.classList.add('open'); // Add open class to trigger animation
        }, 10); // Small delay to allow the browser to register the state change
    }

    isMenuOpen = !isMenuOpen;
}

// Attach the toggleMenu function to the hamburger button
const mobileMenuButton = document.getElementById('mobile-menu-hamburger-button');
if (mobileMenuButton) {
    mobileMenuButton.addEventListener('click', toggleMenu);
}

// Close the mobile menu when clicking outside of it
document.addEventListener('click', (event) => {
    const mobileMenu = document.querySelector('.mobile-menu');
    const isClickInside = mobileMenu?.contains(event.target as Node) || mobileMenuButton?.contains(event.target as Node);
    if (!isClickInside && isMenuOpen) {
        toggleMenu();
    }
});

// Close the mobile menu when clicking on a menu item
const menuItems = document.querySelectorAll('.mobile-menu .nav-item, .mobile-menu .nav-button');
menuItems.forEach(item => {
    item.addEventListener('click', () => {
        if (isMenuOpen) toggleMenu();
    });
});

</script>